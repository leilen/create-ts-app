{
  "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "target": "ESNext",
      "sourceMap": true,
      "incremental": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "strictNullChecks": true,
      "lib": ["esnext", "dom"],
      "useDefineForClassFields": true,
      "typeRoots": [
          "node_modules/@types"
      ],
      "resolveJsonModule": true
  },
  "files" : ["./src/app.ts"],
  "exclude": [
      "node_modules",
      "dist"
  ]
}
